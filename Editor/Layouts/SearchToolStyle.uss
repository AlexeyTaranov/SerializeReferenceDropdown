.bold-label {
    -unity-font-style: bold;
    margin-top: 1px;
    margin-right: 0;
    margin-bottom: 2px;
    margin-left: 0;
}

.property-label {
    min-width: 120px;
    align-self: center;
}

.property-group {
    flex-grow: 1;
    flex-direction: row;
    align-items: center;
    max-height: 22px;
    min-height: 22px;
}

.list-header {
    padding-top: 2px;
    padding-right: 2px;
    padding-bottom: 2px;
    padding-left: 2px;
    flex-direction: row;
    background-color: rgb(37, 37, 37);
    flex-grow: 0;
    flex-shrink: 1;
}

.placeholder {
    flex-grow: 1;
    -unity-text-align: middle-center;
    font-size: 18px;
    background-color: rgba(103, 103, 103, 0.25);
    display: none;
}

.group-root {
    flex-grow: 0;
    flex-shrink: 0;
    margin: 8px;
    border-top-width: 1px;
    border-right-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-left-color: rgba(255, 255, 255, 0.2);
    border-right-color: rgba(255, 255, 255, 0.2);
    border-top-color: rgba(255, 255, 255, 0.2);
    border-bottom-color: rgba(255, 255, 255, 0.2);
    padding-top: 4px;
    padding-right: 4px;
    padding-bottom: 4px;
    padding-left: 4px;
}

.list-size {
    min-width: 200px;
    flex-grow: 1;
    max-width: 400px;
}

.property-edit-size {
    min-width: 150px;
    flex-grow: 1;
    max-width: 300px;
}

.maximize-size {
    flex-grow: 1;
    flex-shrink: 1;
}

.flex-row {
    flex-direction: row;
}

.align-center {
    align-self: center;
}

.group-margin {
    margin: 8px;
    margin-top: 2px;
    margin-right: 2px;
    margin-bottom: 2px;
    margin-left: 2px;
}

.max-width-auto {
    width: auto;
}

.type-selector-overlay {
    position: absolute;
    width: 100%;
    left: 100px;
    min-width: 140px;
    padding-right: 100px;
}

.tree-top-elements {
    flex-grow: 0;
    height: 48px;
    min-height: 48px;
}

.dark-border {
    border-top-width: 1px;
    border-left-color: rgb(37, 37, 37);
    border-right-color: rgb(37, 37, 37);
    border-top-color: rgb(37, 37, 37);
    border-bottom-color: rgb(37, 37, 37);
    border-right-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
}
